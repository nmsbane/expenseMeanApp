<% include partials/header %>
<div class='container'>
    <div class="row">
        <h1 style="text-align: center">Add an bank account</h1>
        <div style="width: 30% ; margin: 20px auto;">
            <form action="/account" method="POST">
                <div class="form-group">
                    <input class='form-control' type="text" name="name" placeholder="name of the account" required>    
                </div>
                <div class="form-group">
                    <input class='form-control' type="text" name="description" placeholder="description of the account" required>    
                </div>
                <div class="form-group">
                    <input class='form-control' type="number" name='balance' placeholder="enter the balance" required>    
                </div>
                <div class='form-group'>
                    <button class='btn btn-large btn-default btn-block btn-primary'>Add account</button>
                </div>
                <a href="/">Go to homepage</a>
                <% include partials/footer %>
            </form>
        </div>
    </div>
    
</div>